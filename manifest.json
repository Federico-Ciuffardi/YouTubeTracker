{
  "manifest_version": 2,

  "name": "YouTubeTracker",
  "description": "Track your youtube videos/series, pause them whenever you want, and resume them where you left them later. Faster and simpler that using bookmarks and history.",
  "version": "1.0",
  "icons": { "16": "icon_16.png",
             "48": "icon_48.png",
            "128": "icon_128.png" },
  "permissions": ["tabs","https://www.youtube.com/*","https://animeflv.net/ver/*"],

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "YouTubeTracker",
    "default_popup": "popup.html"
  },

  "content_scripts" : [
    {
      "matches" : [ "https://www.youtube.com/*","https://animeflv.net/ver/*" ],
      "js" : [ "contentscript.js" ]
    }
  ]
}